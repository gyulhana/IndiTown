{
  "extends": ["react-app", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "import/no-anonymous-default-export": ["error", {
      "allowObject": true
    }]
  }
}